<div class="nested-fields">
  <div class="field">
    <%= f.label :statement, "Titulo da Questão"%>
    <%= f.text_field :statement%>
  </div>

  <div id="answers">
    <%= f.fields_for :answers do |answer| %>
      <%= render 'answer_fields', f:  answer%>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Adicionar Alternativa', f, :answers%>
    </div>
  </div>
  <%= link_to_remove_association "Remover Questão", f %>
</div>
