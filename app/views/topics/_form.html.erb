<%= form_for(topic) do |f| %>

  <%= render partial: 'layouts/error_messages', locals: { entity: topic } %>

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label 'Nome' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit 'Enviar', class: 'btn btn-embossed btn-success' %>
  </div>

  <div class="spacing"></div>
<% end %>
