<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div class="alert alert-info">
      <button type="button" class="close fui-cross" data-dismiss="alert"></button>
      <h4>Ops! Parece que algo está errado...</h4>
      <p>Verifique as informações abaixo:</p>
      <ul style='padding-top: .5em'>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>

      <a href="#" data-dismiss="alert" class="btn btn-info btn-embossed btn-wide">Certo</a>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :name, 'Nome' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :email, 'Email' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :login %>
        <%= f.text_field :login, class: 'form-control' %>
      </div>
    </div> 
  </div>

  <div class="row">
    <div class="<%= (action_name == 'new' || action_name == 'create' ? "col-md-6" : "col-md-12")%>">
      <div class="form-group">
        <%= f.label :password, 'Senha' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <% if action_name == 'new' || action_name == 'create' %>
        <div class="form-group">
          <%= f.label :password_confirmation, 'Confirmação de Senha' %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="form-group">
    <label class="checkbox" for="checkbox1">
      <input type="checkbox" data-toggle="checkbox" value="" id="checkbox1" required>
      Administrador
    </label>
  </div>

  <div class="actions">
    <%= f.submit 'Enviar', class: 'btn btn-embossed btn-success' %>
  </div>
<% end %>
